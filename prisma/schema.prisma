generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum SectionStatus {
  OPEN
  FULL
}

enum PaymentStatus {
  PENDING
  COMPLETED
  WAITLISTED
}

enum LeadStatus {
  NEW
  CONTACTED
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  LATE
  EXCUSED
}

enum ScheduledEmailStatus {
  PENDING
  SENDING
  SENT
  FAILED
  CANCELLED
}

model Section {
  id            String        @id @default(cuid())
  label         String        @unique
  maxCapacity   Int           @default(5)
  enrolledCount Int           @default(0)
  status        SectionStatus @default(OPEN)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  enrollments   Enrollment[]
  classSessions ClassSession[]
}

model Enrollment {
  id               String        @id @default(cuid())
  email            String?
  sectionId        String
  section          Section       @relation(fields: [sectionId], references: [id])
  plan             String        // "FULL" or "DEPOSIT"
  stripeCustomerId String?
  stripeSessionId  String        @unique
  paymentStatus    PaymentStatus @default(PENDING)
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  waitlistPosition Int?
  attendances      Attendance[]

  @@index([sectionId])
  @@index([email])
}

model Lead {
  id        String     @id @default(cuid())
  email     String     @unique
  name      String?
  subject   String?
  notes     String?
  status    LeadStatus @default(NEW)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([status])
}

model Note {
  id           String   @id @default(cuid())
  content      String
  studentEmail String
  createdAt    DateTime @default(now())

  @@index([studentEmail])
}

model Material {
  id          String   @id @default(cuid())
  filename    String
  contentType String
  size        Int
  blobUrl     String
  category    String   @default("Uncategorized")
  createdAt   DateTime @default(now())
}

model ClassSession {
  id          String       @id @default(cuid())
  sectionId   String
  section     Section      @relation(fields: [sectionId], references: [id])
  title       String
  date        DateTime
  sessionNum  Int
  createdAt   DateTime     @default(now())
  attendances Attendance[]

  @@unique([sectionId, sessionNum])
  @@index([sectionId])
}

model Attendance {
  id             String           @id @default(cuid())
  classSessionId String
  classSession   ClassSession     @relation(fields: [classSessionId], references: [id], onDelete: Cascade)
  enrollmentId   String
  enrollment     Enrollment       @relation(fields: [enrollmentId], references: [id], onDelete: Cascade)
  status         AttendanceStatus @default(PRESENT)
  note           String?
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  @@unique([classSessionId, enrollmentId])
  @@index([classSessionId])
  @@index([enrollmentId])
}

model ScheduledEmail {
  id            String               @id @default(cuid())
  to            String[]
  subject       String
  body          String
  scheduledFor  DateTime
  status        ScheduledEmailStatus @default(PENDING)
  sentAt        DateTime?
  resendId      String?
  error         String?
  attachmentIds String[]
  createdAt     DateTime             @default(now())
  updatedAt     DateTime             @updatedAt

  @@index([status, scheduledFor])
}
